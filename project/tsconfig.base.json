{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": ["es2020", "dom"],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@project/blog-post": ["libs/post/blog-post/src/index.ts"],
      "@project/post-config": ["libs/post/post-config/src/index.ts"],
      "@project/post/comment": ["libs/post/comment/src/index.ts"],
      "@project/post/like": ["libs/post/like/src/index.ts"],
      "@project/post/repost": ["libs/post/repost/src/index.ts"],
      "@project/post/search": ["libs/post/search/src/index.ts"],
      "@project/shared/core": ["libs/shared/core/src/index.ts"],
      "@project/shared/data-access": ["libs/shared/data-access/src/index.ts"],
      "@project/shared/hasher": ["libs/shared/hasher/src/index.ts"],
      "@project/shared/helpers": ["libs/shared/helpers/src/index.ts"],
      "@project/subscription": ["libs/user/subscription/src/index.ts"],
      "@project/user/authentication": ["libs/user/authentication/src/index.ts"],
      "@project/user/blog-user": ["libs/user/blog-user/src/index.ts"],
      "@project/user/password": ["libs/user/password/src/index.ts"],
      "@project/user/user-config": ["libs/user/user-config/config/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
