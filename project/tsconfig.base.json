      ],
      "@project/shared/core": ["libs/shared/core/src/index.ts"],
      "@project/shared/data-access": ["libs/shared/data-access/src/index.ts"],
      "@project/shared/hasher": ["libs/shared/hasher/src/index.ts"],
      "@project/shared/helpers": ["libs/shared/helpers/src/index.ts"],
      "@project/shared/pipes": ["libs/shared/pipes/src/index.ts"],
      "@project/subscription": ["libs/user/subscription/src/index.ts"],
      "@project/tag": ["libs/post/tag/src/index.ts"],
      "@project/user/authentication": ["libs/user/authentication/src/index.ts"],
      "@project/user/blog-user": ["libs/user/blog-user/src/index.ts"],
      "@project/user/password": ["libs/user/password/src/index.ts"],
      "@project/user/user-config": ["libs/user/user-config/src/index.ts"],
      "@project/user/user-notify": ["libs/user/user-notify/src/index.ts"]
    }
  },
  "exclude": ["node_modules", "tmp"]
}
