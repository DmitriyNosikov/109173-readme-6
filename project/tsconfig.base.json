      "@project/blog-post": ["libs/post/blog-post/src/index.ts"],
      "@project/blog/models": ["libs/blog/models/src/index.ts"],
      "@project/email-subscriber": [
        "libs/notification/email-subscriber/src/index.ts"
      ],
      "@project/interceprots": ["libs/shared/interceptors/src/index.ts"],
      "@project/notify-config": [
        "libs/notification/notify-config/src/index.ts"
      ],
      "@project/post-notify": ["libs/post/post-notify/src/index.ts"],
      "@project/post/comment": ["libs/post/comment/src/index.ts"],
      "@project/post/like": ["libs/post/like/src/index.ts"],
      "@project/post/post-config": ["libs/post/post-config/src/index.ts"],
      "@project/post/repost": ["libs/post/repost/src/index.ts"],
      "@project/post/search": ["libs/post/search/src/index.ts"],
      "@project/refresh-token": ["libs/user/refresh-token/src/index.ts"],
      "@project/shared/configurations/jwt-config": [
